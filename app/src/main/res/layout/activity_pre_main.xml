<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_screen_background"
    tools:context=".PreMainActivity">

    <TextView
        android:id="@+id/Starting_welcome_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text=" Welcome To My Yatra !"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:id="@+id/welcome_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/welcome_bg_id"
            android:layout_width="515dp"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome_bg" />

    </LinearLayout>

    <Button
        android:id="@+id/btnproceed"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="108dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="@string/proceed" />


</RelativeLayout>